<section class="row background">
	<div class="col-md-8">	
		<section class="video">
			<iframe width="100%" height="315" src="//www.youtube.com/embed/<%= @youtube_id %>?rel=0&amp;showinfo=0&autoplay=1" frameborder="0" allowfullscreen></iframe><br>
		</section>

		<section class="part">
			<h1><%= @song.title %> (<%= @song.year %>) - <%= @song.artist %></h1>
			<p>Published on <%= @song.created_at.strftime("%b %d, %Y") %> <%= link_to '@'+@user_id.username, user_path(@user_id) %></p>
			<p class="text"><%= @song.description %></p>
			<p><strong>Genre:</strong> <%= @song.genre %></p>
		</section>

		<section class="part">		
			<h3>Lyrics:</h3>
			<p class="text"><%= @song.lyrics %></p>
		</section>

		<section class="part"> 
			<h3>Leave a Comment:</h3>
			<%#= render 'comments/form' %>
		</section>

		<%= render 'comments/comments' %>

		<section class="part"> 
			<%= link_to '[ Previous ]', songs_path %>
			<%= link_to '[ Back to Songs ]', library_path %> 
			<%= link_to '[ Next ]', songs_path %> 
		</section>

		<section class="part">
			<% if @current_user == @user %>
				<p>YouTube Link: <a href="<%= @song.link %>"><%= @song.link %></a></p>
				<p>Updated on <%= @user_id.updated_at.strftime("%b %d, %Y") %></p>	
				<%= link_to '[ Edit ]', user_song_path(@song.user_id, @song.id) %> 
				<%= link_to '[ Delete ]', destroy_song_path(@song.user_id, @song.id), method: :delete %>  
			<% else %>
				<p>YouTube Link: <a href="<%= @song.link %>"><%= @song.link %></a></p>
				<p>Updated at: <%= @user_id.updated_at %></p>
			<% end %>
		</section>
	</div> 

	<%= render 'layouts/song_sidebar' %>
</section>