<section class="row background">
	<div class="col-md-8">	
		<section class="video">
			<iframe width="100%" height="315" src="//www.youtube.com/embed/<%= @youtube_id %>" frameborder="0" allowfullscreen></iframe><br>
		</section>

		<section class="part">
			<h1><%= @song.title %> (<%= @song.year %>) - <%= @song.artist %></h1>
			<p>Published on <%= @user_id.created_at %> <%= link_to '@'+@user_id.username, user_path(@user_id) %></p>
			<p class="text"><%= @song.description %></p>
		</section>

		<section class="part">		
			<h3>Lyrics:</h3>
			<p class="text"><%= @song.lyrics %></p>
		</section>

		<section class="part">
			<p>YouTube Link: <a href="<%= @song.link %>"><%= @song.link %></a></p>
			<p>Updated at: <%= @user_id.updated_at %></p> 

			<%= link_to '[ Previous ]', songs_path %>
			<%= link_to '[ Back to Songs ]', songs_path %> 
			<%= link_to '[ Next ]', songs_path %> 

			<%= link_to '[ Edit ]', songs_path %> 
			<%= link_to '[ Delete ]', songs_path %> 
		</section>
	</div> 

	<%= render 'layouts/sidebar' %>
</section>