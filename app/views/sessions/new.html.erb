<section class="row background">
	<div class="col-md-6 col-md-offset-3">

		<section class='login'>
			<h1>Log In</h1>

      <%= form_tag login_path do %>
          <h4><%= label_tag :email %></h4>
          <%= text_field_tag :email, '', class: 'text_field' %>
          
          <br><br>

          <h4><%= label_tag :password %></h4>
          <%= password_field_tag :password, '', class: 'text_field' %>
          
          <%= submit_tag "Log In", class: 'login_button' %>	
      <% end %>
		</section>
    		
	</div>
</section>

