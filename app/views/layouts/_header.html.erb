<header class="row">
	<div class="col-md-3 logo">
		<%= link_to 'EmpowerMIX', root_path %>
	</div>

  <nav class="col-md-9">
    <ul>
      <li><%= link_to 'About', about_path %></li>
      <li><%= link_to 'Library', library_path %></li>
      <li><%= link_to 'Contributors', users_path %></li>

      <% if current_user %>
        <li><%= link_to '@'+ current_user.username, user_path(current_user.id) %></li>
        <li><%= link_to 'Log Out', logout_path, method: :delete, data: {confirm: 'Are you sure?'} %></li>
      <% else %>
        <li><button><%= link_to 'Sign Up', new_user_path %></button></li>
        <li><button><%= link_to 'log In', login_path %></button></li>
      <% end %>
    </ul>
  </nav>
</header>